/**
 * Each get org-wide permissions
 */
enum OrganizationRole {
  owner
  admin
  member
}

/**
 * Each get per-project permissions
 */
enum ProjectRole { 
  /**
   * Has full access to the project.
   * - Can update project settings (name, description, public/private)
   * - Can assign threads, change status, set priority
   * - Can manage labels
   * - Can invite/remove contributors
   */
  maintainer
  /**
   * Can contribute to the project. Like an external open source contributor.
   * - Can create threads (feedback)
   * - Can comment on threads
   */
  contributor
}

enum ThreadStatus {
  /**
   * Just submitted feedback that hasn't been looked at yet. Default state when user creates a thread
   */
  new
  /**
   * Team is actively looking at it, investigating, or discussing
   */
  under_review
  /**
   * Decided to do it, added to roadmap/backlog
   */
  planned
  /**
   * Fixed/implemented/resolved. Success state where feedback resulted in action
   */
  completed
  /**
   * Decided to not do it. Could be for various reasons like out of scope, working as intended, not feasible, duplicate, declined by user, etc.
   */
  wont_fix
}

enum NotificationType {
  reply
  status_change
  priority_change
  assignment
}
